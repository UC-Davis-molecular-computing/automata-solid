{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node"]
  },
  "include": [
    "src/process_inputs.ts",
    "src/core/**/*",
    "src/parsers/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/ui/**/*",
    "src/index.tsx"
  ]
}